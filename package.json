{
  "name": "durgasos",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env TURBOPACK=1 next dev --turbopack -p 3000",
    "dev:fast": "cross-env TURBOPACK=1 next dev --turbopack -p 3000 --experimental-build-mode=compile",
    "dev:webpack": "next dev -p 3000",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "genkit:server": "tsx src/ai/server.ts",
    "genkit:setup": "node setup-env.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run genkit:dev\"",
    "build": "cross-env NODE_ENV=production next build",
    "build:turbo": "cross-env TURBOPACK=1 NODE_ENV=production next build --turbopack",
    "build:analyze": "cross-env ANALYZE=true next build",
    "build:clean": "rimraf .next && npm run build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "perf": "next build && next start",
    "clean": "rimraf .next .turbo .swc node_modules/.cache",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test:all && npm run typecheck",
    "ci": "npm run lint && npm run typecheck && npm run test:all && npm run build",
    "clean:all": "npm run clean && rimraf node_modules package-lock.json && npm install",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "dependencies": {
    "@genkit-ai/express": "^1.0.4",
    "@genkit-ai/google-genai": "^1.21.0",
    "@genkit-ai/next": "^1.21.0",
    "@genkit-ai/vertexai": "^1.0.4",
    "@google/genai": "^1.27.0",
    "@hookform/resolvers": "^4.1.3",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "embla-carousel-react": "^8.6.0",
    "express": "^4.21.0",
    "firebase": "^11.9.1",
    "framer-motion": "^12.23.24",
    "genkit": "^1.0.0-rc.18",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.475.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-redux": "^9.0.0",
    "react-rnd": "^10.4.10",
    "recharts": "^2.15.1",
    "redux": "^5.0.0",
    "redux-persist": "^6.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "wav": "^1.0.2",
    "zod": "^3.24.2",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@playwright/test": "^1.40.0",
    "@reduxjs/toolkit": "^2.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/cors": "^2.8.17",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/wav": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "genkit-cli": "^1.0.4",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "wait-on": "^7.0.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.durgasos.desktop",
    "productName": "DurgasOS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "icon": "public/icon-512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "public/icon-512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
