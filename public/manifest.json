{
  "name": "DurgasOS - Web Operating System",
  "short_name": "DurgasOS",
  "description": "A sophisticated web-based operating system that replicates the Windows 11 experience with AI-powered features",
  "start_url": "/",
  "display": "fullscreen",
  "orientation": "any",
  "theme_color": "#0078D4",
  "background_color": "#FFFFFF",
  "categories": ["productivity", "utilities", "business"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "id": "durgasos-web-os",
  "icons": [
    {
      "src": "/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "DurgasOS Desktop View"
    },
    {
      "src": "/screenshot-mobile.png",
      "sizes": "375x667",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "DurgasOS Mobile View"
    }
  ],
  "shortcuts": [
    {
      "name": "File Explorer",
      "short_name": "Explorer",
      "description": "Open File Explorer",
      "url": "/?app=explorer",
      "icons": [
        {
          "src": "/shortcut-explorer.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Open Settings",
      "url": "/?app=settings",
      "icons": [
        {
          "src": "/shortcut-settings.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "AI Assistant",
      "short_name": "Assistant",
      "description": "Open AI Assistant",
      "url": "/?app=assistant",
      "icons": [
        {
          "src": "/shortcut-assistant.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Notepad",
      "short_name": "Notepad",
      "description": "Open Notepad",
      "url": "/?app=notepad",
      "icons": [
        {
          "src": "/shortcut-notepad.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://durgasos.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+durgasos",
      "url": "/?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/?app=notepad&file=%s",
      "accept": {
        "text/plain": [".txt", ".md", ".log"]
      }
    },
    {
      "action": "/?app=explorer&file=%s",
      "accept": {
        "application/json": [".json"],
        "application/xml": [".xml"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/?share=%s",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}
